<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.forgetpassword.view.SetNewPasswordActivity">

        <include
            android:id="@+id/incSetPassword"
            layout="@layout/include_set_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/incPasswordReset"
            layout="@layout/include_password_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <org.ovi.widget.ProgressView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/progressView"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>