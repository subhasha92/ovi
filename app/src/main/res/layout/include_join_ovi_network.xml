<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/guideline_20dp" />

        <LinearLayout
            android:id="@+id/lLayLogin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/light_brown"
            android:padding="@dimen/margin_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:text="@string/join_ovi_network"
                android:textColor="@color/white_1000"
                android:textSize="@dimen/ts_13sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:fontFamily="@font/opensans_bold"
                android:gravity="end"
                android:text="@string/log_in"
                android:textColor="@color/white_1000"
                android:textSize="@dimen/ts_14sp" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:fontFamily="@font/opensans_bold"
            android:text="@string/welcome"
            android:textColor="@color/dark_blue"
            android:textSize="@dimen/ts_18sp"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/lLayLogin" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvAboutText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:fontFamily="@font/opensans_regular"
            android:lineSpacingExtra="@dimen/size_5dp"
            android:text="@string/selfless_love_foundation_empowers_youth_with_lived_foster_care_experiences_to_connect_and_share_their_stories_one_voice_impact_ovi_is_our_youth_engagement_initiative"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/ts_12sp"
            app:layout_constraintEnd_toEndOf="@+id/guideline_end"
            app:layout_constraintStart_toStartOf="@+id/guideline_start"
            app:layout_constraintTop_toBottomOf="@id/tvAboutUs" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>