<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <org.ovi.widget.OviButton
            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_grey_rounded_corner_4radius"
            android:paddingTop="@dimen/margin_15dp"
            android:paddingBottom="@dimen/margin_15dp"
            android:text="@string/next"
            android:textColor="@color/grey" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvPrevious"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:background="@drawable/bg_blue_stroke_white_fill"
            android:fontFamily="@font/opensans_semibold"
            android:gravity="center"
            android:paddingTop="@dimen/margin_17dp"
            android:paddingBottom="@dimen/margin_16dp"
            android:text="@string/previous"
            android:textSize="@dimen/ts_14sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>